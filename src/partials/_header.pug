	.Contents 
		.LeftBlock 
			.LinkHolder 
				a.online.targetBlank(href='https://hiroshima.beer/')
					.icon 
					span online<br>shop 
				ul 
					li.ig: a.targetBlank(href='https://www.instagram.com/hnb_beer/')
					li.x: a.targetBlank(href='https://twitter.com/hnb_beer')
					li.fb: a.targetBlank(href='https://www.facebook.com/hiroshimaNB/')
					li.note: a.targetBlank(href='https://note.com/hiroshima_hnb/')
			if body == 'topPage'
			else
				.menuBtnHolder
					ul 
						li: a(href=`${path}aboutus/`) about us
